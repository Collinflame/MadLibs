extends layout

block content
  h1 Enter Your Words
  form(method ="POST" action="/story" id="words")
    label(for="name") Name:
    input(type="text" name="name" id="name")
    br
    label(for="name2") Another Name:
    input(type="text" name="name2" id="name2")
    br
    label(for="adjective") Adjective:
    input(type="text" name="adjective" id="adjective")
    br
    label(for="color") Color:
    input(type="text" name="color" id="color")
    br
    label(for="noun") Noun:
    input(type="text" name="noun" id="noun")
    br
    label(for="videogame") Video Game:
    input(type="text" name="videogame" id="videogame")
    br
    label(for="food") Food:
    input(type="text" name="food" id="food")
    br
    label(for="adjective2") Another Adjective:
    input(type="text" name="adjective2" id="adjective2")
    br
    label(for="storyChoice") Choose One
    select(form="words" name="storyChoice" id="storyChoice")
      option(value = "1") Story 1
      option(value = "2") Story 2
      option(value = "3") Story 3
      option(value = "Random") Random Story
    br
    button(type="submit" form="words") Tell Me a Story